<%= form_with(model: record) do |form| %>
  <% if record.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <form>
      <div class="row mb-3">
        <%= form.label :name, "Transaction name", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= form.label :amount, "Price", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.number_field :amount, placeholder: "5", class: "form-control" %>
        </div>
      </div>

      <%= form.submit class: "btn btn-primary" %>
    </form>
  </div>
<% end %>
